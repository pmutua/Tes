<!DOCTYPE html>
<html>

<head>
    <title>The Elder Scrolls | Forum</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>

</head>

<body>

    <nav class="navbar-default">
        <div class="container">
            <div class="navbar-header">
                <%= image_tag  "eso-favicon310.png", class: "navbar-brand" %>
                <%=link_to "The Elder Scrolls - Fan Forum", root_path, class: "navbar-brand"%>
            </div>
            <ul class="navbar-nav nav navbar-right">
                <% if user_signed_in? %>
                    <li>
                        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
                    </li>
                    <% else %>
                        <li>
                            <%= link_to "Log In" , new_user_session_path %>
                        </li>
                        <li>
                            <%= link_to "Sign Up", new_user_registration_path %>
                        </li>
                        <% end %>
            </ul>
            <% if user_signed_in? %>
                <p>
                    <%= link_to "Post It", new_message_path, class: "navbar-text navbar-link" %>
                </p>
                <% end %>
        </div>
    </nav>

    <p class="notice">
        <%= notice %>
    </p>
    <p class="alert">
        <%= alert %>
    </p>

    <div class="container">
        <%= yield %>
    </div>

</body>

</html>